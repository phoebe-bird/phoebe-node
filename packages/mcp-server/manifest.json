{
  "dxt_version": "0.2",
  "name": "phoebe-ebird-mcp",
  "version": "0.6.4",
  "description": "The official MCP Server for the Phoebe API",
  "author": {
    "name": "Phoebe",
    "email": "sayornis.phoebe.apis@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phoebe-bird/phoebe-node.git"
  },
  "homepage": "https://github.com/phoebe-bird/phoebe-node/tree/main/packages/mcp-server#readme",
  "documentation": "https://science.ebird.org/en/use-ebird-data/download-ebird-data-products",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "EBIRD_API_KEY": "${user_config.EBIRD_API_KEY}"
      }
    }
  },
  "user_config": {
    "EBIRD_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
